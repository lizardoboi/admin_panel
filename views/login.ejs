<h2>Login</h2>
<form method="post" action="/auth/login">
    <label>Username:
        <input type="text" name="username" required />
    </label><br/>
    <label>Password:
        <input type="password" name="password" required />
    </label><br/>
    <button type="submit">Login</button>
</form>
<% if (error) { %>
    <p style="color:red;"><%= error %></p>
<% } %>